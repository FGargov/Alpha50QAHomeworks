<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Homework Suite">
    <test name="Create a story">
        <classes>
            <class name="jira.api.tests.CreateIssueTest">
                <methods>
                    <include name="correctDataReturned_when_createStory"/>
                </methods>
            </class>
        </classes>
    </test>
    <test name="Create a bug">
        <classes>
            <class name="jira.api.tests.CreateIssueTest">
                <methods>
                    <include name="createDataReturned_when_createBug"/>
                </methods>
            </class>
        </classes>
    </test>
    <test name="Request a story">
        <classes>
            <class name="jira.api.tests.CreateIssueTest">
                <methods>
                    <include name="correctStoryReturn_when_getByStoryKey"/>
                </methods>
            </class>
        </classes>
    </test>
    <test name="Request a bug">
        <classes>
            <class name="jira.api.tests.CreateIssueTest">
                <methods>
                    <include name="correctBugReturn_when_getByBugKey"/>
                </methods>
            </class>
        </classes>
    </test>
</suite>